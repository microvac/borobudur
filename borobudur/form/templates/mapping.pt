<fieldset i18n:domain="deform">

    <input type="hidden" name="__start__" value="${field.name}:mapping"/>

    <legend tal:condition="field.title">${field.title}</legend>

    <div class="clearfix alert-message error" tal:condition="field.errormsg()">
        <p>
            There was a problem with this section
        </p>
        <p>${field.errormsg()}</p>
    </div>

    <div tal:condition="field.description">
        ${field.description}
    </div>

    <div
            tal:define="rndr field.renderer;
                  tmpl field.widget.item_template"
            tal:repeat="f field.children"
            tal:replace="structure rndr(tmpl, el,f,cstruct=cstruct[f.name] if cstruct[f.name] else null)"/>

    <input type="hidden" name="__end__" value="${field.name}:mapping"/>

</fieldset>
